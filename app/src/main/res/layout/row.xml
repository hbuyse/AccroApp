<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:background="@drawable/item_shape"
    android:padding="4dip" >

    <LinearLayout
        android:id="@+id/day_month"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="0dip"
        android:layout_marginRight="5dip"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginRight="4dip" >

           <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="0dip"
                android:background="@drawable/month_shape"
                android:gravity="center"
                android:text="@string/sizeMonth"
                android:textColor="@color/font_month"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/day_shape"
                android:gravity="center"
                android:text="@string/sizeDay"
                android:textColor="@color/font_day"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="0dip"
            android:layout_marginRight="4dip"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="0dip"
                android:background="@drawable/month_shape"
                android:gravity="center"
                android:text="@string/sizeMonth"
                android:textColor="@color/font_month"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/day_shape"
                android:gravity="center"
                android:text="@string/sizeDay"
                android:textColor="@color/font_day"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="0dip"
            android:layout_marginRight="4dip"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="0dip"
                android:background="@drawable/month_shape"
                android:gravity="center"
                android:text="@string/sizeMonth"
                android:textColor="@color/font_month"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/day_shape"
                android:gravity="center"
                android:text="@string/sizeDay"
                android:textColor="@color/font_day"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/details"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_toRightOf="@id/day_month" >

        <TextView
            android:id="@+id/place"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/tournamentPlace"
            android:textColor="@color/font"
            android:textSize="16sp"
            android:singleLine="true"/>

        <TextView
            android:id="@+id/detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/tournamentDetails"
            android:textColor="@color/font"
            android:textSize="12sp"
            android:singleLine="true" />

        <TextView
            android:id="@+id/surface"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/surface"
            android:textColor="@color/font"
            android:textSize="12sp"
            android:singleLine="true" />

    </LinearLayout>

</RelativeLayout>